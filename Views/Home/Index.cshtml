<div id="body">
   
    <section id="postitPlaceholder" class="content-wrapper main-content clear-fix">
        
    </section>
</div>
    
<script type="text/template" id="postitTemplate">
    <div class='postit'>
        Subject: {0} <br />
        By: {1} <br />
        On: {2} <br />
        {3} <br />
    </div>
</script>

<script>
    $(function () {
        String.prototype.format = function () {
            var args = arguments;
            return this.replace(/{(\d+)}/g, function (match, number) {
                return typeof args[number] != 'undefined'
                  ? args[number]
                  : match
                ;
            });
        };


        $.getJSON("api/values", function (data) {
            var template = $("#postitTemplate").html()

            $.each(data, function (index, val) {
                $("#postitPlaceholder").append(template.format(val.Subject, val.User, val.CreatedOn, val.Content));
            });

            $(".postit").draggable();
        });
    });

</script>